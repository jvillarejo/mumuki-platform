<%= content_for(:search_btn_group) do %>
  <a class="btn btn-default" href="<%=exercises_path%>"><%= t(:exercise).pluralize %></a>
  <a class="btn btn-default active" href="#"><%= t(:guide).pluralize %></a>
<% end %>

<%= render layout: 'layouts/search', locals: { url: guides_path } do %>
  <% @guides.each do |it| %>
    <div class="panel panel-default exercise-panel">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-10">
            <p class="text-left">
              <%# exercise_status_icon(it) %>
              <strong><%= link_to it.name, it %></strong>
            </p>
          </div>
          <div class="col-md-2">
            <p class="text-right">
              <%= language_icon it.language %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-9">
            <%= it.description %>
          </div>
          <div class="col-md-3">
            <p class="text-right"><%= it.exercises_count %> <%= t :exercise_count %> <%# TODO use quantifiers %> </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8">
            <%= link_to_tag_list(it.search_tags) %>
          </div>
          <div class="col-md-4">
            <p class="text-right"><%= time_ago_in_words(it.created_at) %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="text-center">
  <strong><%= raw t :no_guides, create_path: new_guide_path if @guides.empty? %></strong>
</div>


<div class="row">
  <%= paginate @guides %>
  <br>
</div>

