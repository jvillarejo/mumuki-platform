<%= content_for(:search_btn_group) do %>
  <a class="btn btn-default active" href="#"><%= t(:exercise).pluralize %></a>
  <a class="btn btn-default" href="<%=guides_path %>"><%= t(:guide).pluralize %></a>
<% end %>

<%= render layout: 'layouts/search', locals: { url: exercises_path } do %>
  <% @exercises.each do |exercise| %>
    <div class="panel panel-default exercise-panel">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-10">
            <p class="text-left">
              <%= exercise_status_icon(exercise) %>
              <strong><%= link_to exercise.title, exercise %></strong>
            </p>
          </div>
          <div class="col-md-2">
            <p class="text-right">
              <%= language_icon exercise.language %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-9">
            <%= exercise.teaser_html(link_to '...', exercise) %>
          </div>
          <div class="col-md-3">
            <p class="text-right"><%= exercise.submissions_count %> <%= t :submissions_count %> </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8">
            <%= link_to_tag_list(exercise.search_tags) %>
          </div>
          <div class="col-md-4">
            <p class="text-right"><%= time_ago_in_words(exercise.created_at) %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="text-center">
  <strong><%= raw t :no_exercises, create_path: new_exercise_path if @exercises.empty? %></strong>
</div>


<div class="row">
  <%= paginate @exercises %>
  <br>
</div>
